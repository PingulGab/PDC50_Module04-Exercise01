<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module03Exercise01.View.OfflinePage"
             Title="OfflinePage">

    <VerticalStackLayout VerticalOptions="Center">
        <Label 
            Text="You are offline. Let's get you back online!"
            FontSize="Header"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <VerticalStackLayout MaximumWidthRequest="250">
            <Button Text="Retry"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    Margin="0, 25, 0, 25"
                    Clicked="Retry_Btn"/>

            <Button Text="Exit"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    Background="Maroon"
                    Clicked="Exit_Btn"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>